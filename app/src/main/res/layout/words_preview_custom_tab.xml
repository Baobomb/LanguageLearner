<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="90dp"
        android:layout_height="match_parent">

        <tw.bao.languagelearner.info.view.CircleView
            android:id="@+id/mCvTabIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            app:background_stroke_color="@color/gray"
            app:foreground_stroke_color="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:stroke_width="1.5dp" />

        <TextView
            android:id="@+id/mTvCvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/gray"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/mCvTabIcon"
            app:layout_constraintEnd_toEndOf="@+id/mCvTabIcon"
            app:layout_constraintStart_toStartOf="@+id/mCvTabIcon"
            app:layout_constraintTop_toTopOf="@+id/mCvTabIcon"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/mTvTabText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_tab_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="@string/words_preview_page_tab_level"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mCvTabIcon" />

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>