<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/et_ad_log_viewer_log"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="#99000000"
        android:gravity="bottom"
        android:scrollbars="vertical"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:id="@+id/hsv_ad_log_viewer_tag"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/log_viewer_controlbar_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ad_log_viewer_block"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="BLOCK"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_ad_log_viewer_charging"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="CHARGING"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_ad_log_viewer_offline_db_main"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="DB_MAIN"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/iv_ad_log_viewer_control"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/log_viewer_collapse_icon_bg"
            android:src="@drawable/ic_swap_vert" />
    </LinearLayout>
</LinearLayout>